---
    import html from '../assets/128px-HTML5_Badge.svg.png';
    import css from '../assets/128px-CSS3_logo.svg.png';
    import Javascript from '../assets/128px-Unofficial_JavaScript_logo_2.svg.png';
    import React from '../assets/128px-React.svg.png';
    import PHP from '../assets/128px-PHP-logo.svg.png';
    import Laravel from '../assets/Laravel.svg';
    import Node from '../assets/Node-JS-02.svg';
    import astro from '../assets/Astro.svg';
    import Vue from '../assets/Vue.svg';
---

<section class="relative w-full h-auto pb-10 flex flex-col justify-center items-center md:flex-row md:items-center">
    <!-- Blurred Rotating Blob -->
    <div class="absolute inset-0 flex justify-center items-center -z-10 transform md:translate-x-48"> <!-- Blob shifted right -->
        <div class="w-96 h-96 bg-gradient-to-r from-blue-400 via-green-400 to-yellow-500 opacity-40 blur-3xl rounded-full animate-spin-slow"></div>
    </div>

    <!-- Left Section -->
    <div class="w-11/12 md:w-2/6 h-60 flex flex-col text-center md:text-left">
        <h2 class="font-bold text-white text-2xl md:text-4xl pl-4 pt-4 font-sen">Developer by night.</h2>
        <p class="font-light md:text-xl mx-auto md:mx-0 max-w-80 md:max-w-72 pl-4 pt-4 text-white">
            Fullstack dev building next-gen products and solutions that vibe with your brand.
        </p>
    <div class="w-full md:w-9/12 h-auto  mt-6 mr-4 flex flex-wrap justify-center md:justify-start items-center">
    
        <div class="w-10 h-10 ml-4 flex justify-center items-center ">
            <img src={html.src} alt="" class="w-15 mx-auto"/>
        </div>

        <div class="w-10 h-10 ml-4 flex justify-center items-center ">
            <img src={css.src} alt="" class="w-15 mx-auto"/>
        </div>

        <div class="w-10 h-10 ml-4 flex justify-center items-center ">
            <img src={Javascript.src} alt="" class="w-15 mx-auto"/>
        </div>

        <div class="w-10 h-10 ml-4 flex justify-center items-center ">
            <img src={React.src} alt="" class="w-15 mx-auto"/>
        </div>

    </div>

    <div class="w-full md:w-9/12 h-auto  mt-6 mr-4 flex flex-wrap justify-center md:justify-start items-center">

        <div class="w-10 h-10 ml-4 flex justify-center items-center ">
            <img src={Vue.src} alt="" class="w-15 mx-auto"/>
        </div>
    
        <div class="w-10 h-10 ml-4 flex justify-center items-center">
            <img src={PHP.src} alt="" class="w-17 mx-auto"/>
        </div>
    
        <div class="w-10 h-10 ml-4 flex justify-center items-center">
            <img src={Laravel.src} alt="" class="w-13 mx-auto"/>
        </div>
    
        <div class="w-10 h-10 ml-4 flex justify-center items-center">
            <img src={Node.src} alt="" class="w-13 mx-auto"/>
        </div>
    
        <div class="w-10 h-10 ml-4 flex justify-center items-center">
            <img src={astro.src} alt="Astro Logo" class="w-10 mx-auto"/>
        </div>

    </div>

    </div> <br/> <br/>
    
    <!-- Right Section (Grid) -->
<div class="w-11/12 md:mt-24 h-auto md:h-96 md:w-3/6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-4 p-4">
    <!-- Large Box (Glassmorphic Style) -->
    <div class="bg-white/5 backdrop-blur-sm border border-white/30 rounded-3xl h-48 sm:h-48 lg:h-auto lg:col-span-2 p-4 text-white flex flex-col items-start justify-between">
        <div class="w-full h-12 flex justify-end items-center">
            <div class="w-10 h-10 rounded-full bg-white/15 border-white/2 flex justify-center items-center">
                <a href="https://usecringe.vercel.app/">
                    <svg class="w-6 h-6 text-white dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.213 9.787a3.391 3.391 0 0 0-4.795 0l-3.425 3.426a3.39 3.39 0 0 0 4.795 4.794l.321-.304m-.321-4.49a3.39 3.39 0 0 0 4.795 0l3.424-3.426a3.39 3.39 0 0 0-4.794-4.795l-1.028.961"/>
                    </svg>   
                </a>
            </div>
        </div>

        <div>
            <h1 class="text-3xl font-semibold font-sen">Cringe</h1> <br />
            <p class="text-sm font-regular">Anime Streaming Web App</p>
            <p class="text-sm font-regular">ReactJS | Appwrite</p>
        </div>
    </div>

    <!-- First Small Box (Glassmorphic Style) -->
    <div class="bg-white/5 backdrop-blur-md border border-white/30 rounded-2xl h-52 sm:h-52 lg:h-auto p-4 text-white flex flex-col items-start justify-between">
        <div class="w-full h-12 flex justify-end items-center">
            <div class="w-10 h-10 rounded-full bg-white/15 border-white/2 flex justify-center items-center">
                <a href="https://imxgen.vercel.app">
                    <svg class="w-6 h-6 text-white dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.213 9.787a3.391 3.391 0 0 0-4.795 0l-3.425 3.426a3.39 3.39 0 0 0 4.795 4.794l.321-.304m-.321-4.49a3.39 3.39 0 0 0 4.795 0l3.424-3.426a3.39 3.39 0 0 0-4.794-4.795l-1.028.961"/>
                    </svg>   
                </a>
            </div>
        </div>

        <div>
            <h1 class="text-3xl font-semibold pb-2 font-sen">Imagen</h1> <br />
            <p class="text-sm font-regular">A simple image generator using Unsplash API</p>
            <p class="text-sm font-regular">HTML | CSS | JavaScript</p>
        </div>
    </div>

    <!-- Second Small Box (Glassmorphic Style) -->
    <div class="bg-white/5 backdrop-blur-md border border-white/30 rounded-2xl h-52 sm:h-52 lg:h-auto p-4 text-white flex flex-col items-start justify-between">
        <div class="w-full h-12 flex justify-end items-center">
            <div class="w-10 h-10 rounded-full bg-white/15 border-white/2 flex justify-center items-center">
                <a href="https://nxtflix.vercel.app/">
                    <svg class="w-6 h-6 text-white dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.213 9.787a3.391 3.391 0 0 0-4.795 0l-3.425 3.426a3.39 3.39 0 0 0 4.795 4.794l.321-.304m-.321-4.49a3.39 3.39 0 0 0 4.795 0l3.424-3.426a3.39 3.39 0 0 0-4.794-4.795l-1.028.961"/>
                    </svg>   
                </a>
            </div>
        </div>

        <div>
            <h1 class="text-3xl font-semibold font-sen">Netflix Clone</h1> <br />
            <p class="text-sm font-regular">A 1 to 1 replication of Netflix Nigeria landing page</p>
            <p class="text-sm font-regular">HTML | CSS</p>
        </div>
    </div>
</div>

</section>
