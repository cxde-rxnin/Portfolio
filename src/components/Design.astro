---
    import illustrator from '../assets/128px-Adobe_Illustrator_CC_icon.svg.png';
    import photoshop from '../assets/128px-Adobe_Photoshop_CC_icon.svg.png';
    import indesign from '../assets/128px-Adobe_InDesign_CC_icon.svg.png';
    import figma from '../assets/128px-Figma-logo.svg.png';
    import canva from '../assets/128px-Canva_icon_2021.svg.png';
---

<section class="relative w-full h-auto pb-10 flex flex-col justify-center items-center md:flex-row md:items-center">
    <!-- Blurred Rotating Blob -->
    <div class="absolute inset-0 flex justify-center items-center -z-10 transform md:translate-x-48"> <!-- Blob shifted right -->
        <div class="w-96 h-96 bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 opacity-40 blur-3xl rounded-full animate-spin-slow"></div>
    </div>

    <!-- Left Section -->
    <div class="w-11/12 md:w-2/6 h-60 flex flex-col text-center md:text-left">
        <h2 class="font-bold text-white text-2xl md:text-4xl pl-4 pt-4 font-sen">Designer by day,</h2>
        <p class="font-light md:text-xl mx-auto md:mx-0 max-w-80 md:max-w-72 pl-4 pt-4 text-white">
            Brand/Product designer crafting designs that pop, and visuals that hit different.
        </p>
        <div class="w-full md:w-9/12 h-16 mt-6 mr-4 flex justify-evenly md:justify-start items-center">
            
            <div class="w-10 h-10 ml-4">
                <img src={illustrator.src} alt="" class="w-15 mx-auto"/>
            </div>

            <div class="w-10 h-10 ml-4">
                <img src={photoshop.src} alt="" class="w-15 mx-auto"/>
            </div>

            <div class="w-10 h-10 ml-4">
                <img src={indesign.src} alt="" class="w-15 mx-auto"/>
            </div>

            <div class="w-8 h-8 ml-4">
                <img src={figma.src} alt="" class="w-10 mx-auto"/>
            </div>

            <div class="w-10 h-10 ml-4">
                <img src={canva.src} alt="" class="w-15 mx-auto"/>
            </div>

        </div>
    </div>
    
    <!-- Right Section (Grid) -->
    <div class="w-11/12 md:mt-24 h-auto md:h-96 md:w-3/6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 p-4">
        <!-- Large Box (Glassmorphic Style) -->
        <a href="https://www.behance.net/gallery/207250821/Stickernator" class="bg-white/5 backdrop-blur-sm border border-white/30 rounded-3xl h-48 sm:h-48 lg:h-auto lg:col-span-2 lg:row-span-2 lg:min-h-full p-4 text-white flex flex-col items-start justify-between transition duration-200 hover:scale-105">
            <div class="w-full h-12 flex justify-end items-center">
                <div class="w-10 h-10 rounded-full bg-white/15 hover:bg-white transition ease duration-300 border-white/2 flex justify-center items-center">
                    <svg class="w-6 h-6 text-white hover:text-black dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.213 9.787a3.391 3.391 0 0 0-4.795 0l-3.425 3.426a3.39 3.39 0 0 0 4.795 4.794l.321-.304m-.321-4.49a3.39 3.39 0 0 0 4.795 0l3.424-3.426a3.39 3.39 0 0 0-4.794-4.795l-1.028.961"/>
                    </svg>   
                </div>
            </div>

            <div>
                <h1 class="text-3xl font-semibold font-sen">Stickernator</h1>
                <p class="text-sm font-regular">Product design for the largest Sticker store in Nigeria.</p>
            </div>
        </a>
        
        <!-- First Small Box (Glassmorphic Style) -->
        <a href="https://www.behance.net/gallery/208577939/Begg" class="bg-white/5 backdrop-blur-md border border-white/30 rounded-2xl h-52 sm:h-52 lg:h-auto p-4 text-white flex flex-col items-start justify-between transition duration-200 hover:scale-105">
            <div class="w-full h-12 flex justify-end items-center">
                <div class="w-10 h-10 rounded-full bg-white/15 border-white/2 hover:bg-white transition ease duration-300 flex justify-center items-center">
                    <svg class="w-6 h-6 text-white hover:text-black dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.213 9.787a3.391 3.391 0 0 0-4.795 0l-3.425 3.426a3.39 3.39 0 0 0 4.795 4.794l.321-.304m-.321-4.49a3.39 3.39 0 0 0 4.795 0l3.424-3.426a3.39 3.39 0 0 0-4.794-4.795l-1.028.961"/>
                    </svg>   
                </div>
            </div>

            <div>
                <h1 class="text-3xl font-semibold pb-2 font-sen">Begg</h1>
                <p class="text-sm font-regular">Brand design for a peer to peer financial request app.</p>
            </div>
        </a>
        
        <!-- Second Small Box (Glassmorphic Style) -->
        <a href="https://www.behance.net/gallery/207166615/Zeep" class="bg-white/5 backdrop-blur-md border border-white/30 rounded-2xl h-52 sm:h-52 lg:h-auto p-4 text-white flex flex-col items-start justify-between transition duration-200 hover:scale-105">
            <div class="w-full h-12 flex justify-end items-center">
                <div class="w-10 h-10 rounded-full bg-white/15 hover:bg-white transition ease duration-300 border-white/2 flex justify-center items-center">
                    <svg class="w-6 h-6 text-white hover:text-black dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.213 9.787a3.391 3.391 0 0 0-4.795 0l-3.425 3.426a3.39 3.39 0 0 0 4.795 4.794l.321-.304m-.321-4.49a3.39 3.39 0 0 0 4.795 0l3.424-3.426a3.39 3.39 0 0 0-4.794-4.795l-1.028.961"/>
                    </svg>   
                </div>
            </div>

            <div>
                <h1 class="text-3xl font-semibold font-sen">Zeep</h1>
                <p class="text-sm font-regular">Product design for a car rental app.</p>
            </div>
        </a>
    </div>
</section>
